<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/framelayout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardbtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"

        android:backgroundTint="@color/maincolour"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:background="@color/background"
                android:layout_width="match_parent"

                android:layout_height="220sp">

                <ImageView
                    android:src="@drawable/loading"

                    android:id="@+id/newsimage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0sp">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginTop="5sp"
                android:id="@+id/newstitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="title of the news is here"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/blackopsoneregular"

                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_marginTop="5sp"
                android:id="@+id/newssiscription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="title of the news is here"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/arapeyregular"
                >

            </TextView>

            <TextView
                android:layout_marginBottom="5sp"
                android:layout_marginTop="3sp"
                android:id="@+id/newssource2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="by hindustan times...."
                android:textColor="#FF0000"
                android:fontFamily="@font/arapeyregular"

                android:textSize="13sp">

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>